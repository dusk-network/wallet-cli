help: ## Display this help screen
	@grep -h -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-15s\033[0m %s\n", $$1, $$2}'

build: ## Build the wallet
	cargo b --release

install: build
	cargo install --path .

test: build ## Run wallet tests
	cargo test --release

.PHONY: build test help

tree:
	tree -I target 